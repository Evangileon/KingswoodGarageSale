<!DOCTYPE html>
<html>
<head>
  <title>#{@page_title} - Kingswood Admin</title>
  <%= stylesheet_link_tag "admins", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "admins", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <script>

      window.Shoppe = {}
      window.Shoppe.currencyUnit = "#{h settings.currency_unit}";

  </script>
</head>
<body>
<nav class="sidebar">
  <header class="logo">
    <h1>
      <%= link_to "Kingswood Shop", root_path %>
    </h1>
    <p>v#{Shoppe::VERSION}</p>
  </header>
  <p class="logged">
    <%= t('logged_in_as', user_name: current_user.full_name) %>
  </p>
  <ul>
    <% for item in NavigationManager.find(:admin_primary).items %>
        <li>
          <%= navigation_manager_link item %>
        </li>
    <% end %>
    <li>
      <%= link_to "Logout", [:logout], :method => :delete %>
    </li>
  </ul>
</nav>
<header class="main">
  <%= yield :header %>
</header>
<div id="content">
  <section class="main">
    <%= yield %>
  </section>
</div>
<footer>
  <p class="store">

  </p>
</footer>
</body>
</html>