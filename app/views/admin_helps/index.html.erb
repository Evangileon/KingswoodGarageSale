<table border='1' class="table table-striped table-bordered table-condensed">

  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
  <% @conversation_users.each.reject { |u| u.id == current_conversation_user.id }.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
                      "data-sid" => current_conversation_user.id, "data-rid" => user.id %>
        </td>
      </tr>
  <% end %>
  </tbody>

</table>