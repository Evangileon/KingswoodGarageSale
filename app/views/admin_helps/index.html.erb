<table border='1' class="table table-striped table-bordered table-condensed">

  <thead>
    <tr>
      <th>Last Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
  <% ObjectSpace.each_object(Shoppe::User) do |user| %>
      <tr>
        <td><%= user.last_name %></td>
        <td><%= user.email_address %></td>
        <td>
          <%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
                      "data-sid" => current_order.id, "data-rid" => user.id %>
        </td>
      </tr>
  <% end %>
  </tbody>

</table>